<!DOCTYPE html>
<html>
<head>
  <title>Declutter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">

    <div class="alerts">

      <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type ="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div> 
    <% elsif flash[:error] %> 
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss ="alert">&times;</button>
        <%= flash[:error] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss= "alert">&times;</button>
        <%= flash[:alert] %>
      </div>

    <% end %>

  </div>

  <div class="nav">
    <ul>
    <li><%= link_to "—Home", root_path %></li>
    <li><%= link_to "—Contact", contact_path %></li>

    <% if current_user %>
    <li>—Hello <%= link_to (current_user.email || current_user.name), current_user %>!</li><li> <%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
    <% else %>
    <li><%= link_to "—Sign In", new_user_session_path %> or
    <%= link_to "Sign Up", new_user_registration_path %></li>
    <% end %>

  </ul>
</div>





<%= yield %>

  </div> 
</body>
</html>
